<Window x:Class="SHPDiagnosticsViewer.ProjectDataPreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Project Data Preview" Height="600" Width="900"
        MinHeight="480" MinWidth="720">
  <Grid Margin="12">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>

    <StackPanel Grid.Row="0" Margin="0,0,0,8">
      <TextBlock x:Name="StageText" Text="Preparing extraction..." Margin="0,0,0,6" />
      <ProgressBar x:Name="ExtractionProgressBar" Height="18" Minimum="0" Maximum="100" />
    </StackPanel>

    <TabControl Grid.Row="1">
      <TabItem Header="Diagnostics Mapping">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
          <StackPanel>
            <TextBlock Text="Device Page Mapping" Margin="0,0,0,6" FontWeight="SemiBold" />
            <DataGrid ItemsSource="{Binding DiagnosticsMapping}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      Height="180">
              <DataGrid.Columns>
                <DataGridTextColumn Header="DeviceId" Binding="{Binding DeviceId}" Width="80" />
                <DataGridTextColumn Header="DeviceName" Binding="{Binding DeviceName}" Width="*" />
                <DataGridTextColumn Header="PageNumber" Binding="{Binding PageNumber}" Width="90" />
                <DataGridTextColumn Header="PageName" Binding="{Binding PageName}" Width="*" />
              </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Driver Config Map" Margin="0,12,0,6" FontWeight="SemiBold" />
            <DataGrid ItemsSource="{Binding DriverConfigEntries}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      Height="180">
              <DataGrid.Columns>
                <DataGridTextColumn Header="DriverDeviceId" Binding="{Binding DriverDeviceId}" Width="110" />
                <DataGridTextColumn Header="DeviceName" Binding="{Binding DeviceName}" Width="*" />
                <DataGridTextColumn Header="DisplayName" Binding="{Binding DeviceDisplayName}" Width="*" />
                <DataGridTextColumn Header="Key" Binding="{Binding Key}" Width="160" />
                <DataGridTextColumn Header="Value" Binding="{Binding Value}" Width="*" />
                <DataGridTextColumn Header="VariableName" Binding="{Binding ResolvedVariableName}" Width="*" />
              </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="System Variable Map" Margin="0,12,0,6" FontWeight="SemiBold" />
            <DataGrid ItemsSource="{Binding SysVarRefMapEntries}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      Height="180">
              <DataGrid.Columns>
                <DataGridTextColumn Header="SysVarRef" Binding="{Binding SysVarRef}" Width="*" />
                <DataGridTextColumn Header="DriverDeviceId" Binding="{Binding DriverDeviceId}" Width="120" />
                <DataGridTextColumn Header="DeviceId" Binding="{Binding DeviceId}" Width="90" />
                <DataGridTextColumn Header="VariableName" Binding="{Binding VariableName}" Width="*" />
              </DataGrid.Columns>
            </DataGrid>
          </StackPanel>
        </ScrollViewer>
      </TabItem>
    </TabControl>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
      <Button Content="Download Diagnostics Mapping" Width="220" Margin="0,0,8,0" Click="DownloadDiagnosticsMapping_Click" />
      <Button Content="Close" Width="90" Click="Close_Click" />
    </StackPanel>
  </Grid>
</Window>
